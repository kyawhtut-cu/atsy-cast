<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.card.view.VideoCardView">

    <data>

        <import type="android.view.View" />

        <variable
            name="isFocus"
            type="Boolean" />

        <variable
            name="fileName"
            type="String" />

        <variable
            name="thumbnailPath"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/x215dp"
        android:layout_height="wrap_content"
        android:background="@{isFocus ? @color/colorCardBackgroundFocus : @color/colorCardBackgroundUnFocus}"
        tools:background="@color/colorCardBackgroundFocus">

        <ImageView
            android:id="@+id/tvThumbnailPhoto"
            isHorizontal="@{true}"
            isNeedToCache="@{true}"
            loadImage="@{thumbnailPath}"
            android:layout_width="0dp"
            android:layout_height="@dimen/x140dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_thumbnail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.kyawhut.atsycast.share.components.RoundedConstraintLayout
            isVisible="@{isFocus}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cornerAll="@dimen/x100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                isVisible="@{isFocus}"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/blur"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/x32dp"
                android:layout_height="@dimen/x32dp"
                android:layout_margin="@dimen/x8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_action_play" />
        </com.kyawhut.atsycast.share.components.RoundedConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
