<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TvSetting" parent="BaseTvTheme.Setting">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Leanback</item>
    </style>

    <style name="NumberText">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_number</item>
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textSize">@dimen/text_regular_3x</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
